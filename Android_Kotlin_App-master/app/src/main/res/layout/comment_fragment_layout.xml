            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_comment_email"
            app:layout_constraintTop_toTopOf="@+id/textView14"
            app:layout_constraintBottom_toBottomOf="@+id/textView14"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="@+id/body_comment_name"
            app:layout_constraintEnd_toEndOf="@+id/body_comment_name" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/fragComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/body_comment_body"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView13" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.02" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
</androidx.constraintlayout.widget.ConstraintLayout>