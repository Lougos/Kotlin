<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:label="@string/title_comment">

    <TextView
            android:text="Comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.13"
            android:textColor="#070000" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp" android:id="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/body_comment_name"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="@+id/textView12"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.01999998"
            app:layout_constraintHorizontal_bias="0.0" android:text="Content:"
            android:textColor="#000000" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/textView13" app:layout_constraintEnd_toEndOf="@+id/textView13"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/body_comment_body" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="#000000"/>
    <TextView
            android:text="TextView"
            android:singleLine="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_comment_name" app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.16"
            android:layout_marginBottom="37dp" app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintVertical_bias="0.0"/>
